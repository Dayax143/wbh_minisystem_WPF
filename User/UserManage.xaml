<UserControl x:Class="fortest.UserManage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:fortest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Foreground="#333333"
    d:DesignWidth="1360" d:DesignHeight="768">

    <DockPanel Background="#F5F5F5" Margin="0,0,-27,0">

        <StackPanel DockPanel.Dock="Top" Margin="16" Orientation="Vertical">
            <TextBlock Text="Task Management" FontSize="28" FontWeight="Bold" Margin="0,0,0,16" Foreground="#333333"/>

            <!-- Combined Grid for all filters -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Name/Phone Filter (Row 0) -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Filter by name/phone:" VerticalAlignment="Center" FontSize="16" Margin="0,0,8,8" Foreground="#333333"/>
                <TextBox Grid.Row="1" Grid.Column="1" Name="txtContact" Height="36" Margin="0,0,9,8" Background="White" BorderBrush="#CCCCCC" Padding="4"/>
                <Button Grid.Row="1" Grid.Column="2" Content="Add Task" Width="110" Height="36" HorizontalAlignment="Left" Margin="0,0,8,8" Background="#4CAF50" Foreground="White" BorderBrush="#4CAF50"/>

                <!-- Date Filter (Row 1) -->
                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,8,0,8" VerticalAlignment="Center">
                    <CheckBox x:Name="chkEnableDateFilter" Content="Enable Date Filter" VerticalAlignment="Center" Margin="0,0,16,0" FontSize="16" Foreground="#333333"/>
                    <TextBlock Text="From:" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#333333"/>
                    <DatePicker Width="120" Height="36" Margin="0,0,8,0" Name="dtpickerstart" Background="White" BorderBrush="#CCCCCC"/>
                    <TextBlock Text="To:" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#333333"/>
                    <DatePicker Width="120" Height="36" Margin="0,0,8,0" Name="dtpickerend" Background="White" BorderBrush="#CCCCCC"/>
                    <Button Content="Apply Filter" Width="120" Height="36" Name="btnFilterByDate" Margin="16,0,8,0" Background="#2196F3" Foreground="White" BorderBrush="#2196F3"/>
                    <Button Content="Clear Filters" Width="120" Height="36" Name="btnClearFilters" Background="#9E9E9E" Foreground="White" BorderBrush="#9E9E9E"/>
                </StackPanel>

                <!-- Prepared Filters (Row 2) -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Prepared Filters:" VerticalAlignment="Center" FontSize="16" Margin="0,0,8,0" Foreground="#333333"/>
                <ComboBox Grid.Row="2" Grid.Column="1" x:Name="filterComboBox" Height="36" Margin="0,0,9,0" Background="White" BorderBrush="#CCCCCC">
                    <ComboBoxItem Content=""/>
                    <ComboBoxItem Content="Pending"/>
                    <ComboBoxItem Content="Completed"/>
                </ComboBox>
            </Grid>

        </StackPanel>

        <DataGrid Name="dgvTasks" 
                  Margin="16"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  ColumnWidth="*"
                  Background="White"
                  BorderBrush="#CCCCCC"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  AlternatingRowBackground="#F0F0F0">
        </DataGrid>
    </DockPanel>
</UserControl>
