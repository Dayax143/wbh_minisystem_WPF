<Window x:Class="fortest.winConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fortest"
        mc:Ignorable="d"
        Title="Database Configuration"
        Height="534" Width="753"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="0,5,10,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <Style TargetType="{x:Type Control}">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#43A047"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
            <Setter Property="Background" Value="#9E9E9E"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#757575"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TertiaryButtonStyle" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="10" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Text="Database Connection Configuration"
                       Grid.Row="0"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="10,20,10,10"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="#333333"/>

            <TabControl Grid.Row="1" Margin="0,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="639" Height="365">
                <TabItem Header="SQL Server">
                    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Top">
                        <TextBlock Text="SQL Server Configuration"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"
                                   HorizontalAlignment="Center"
                                   Foreground="#333333"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label Content="Server Name:" Grid.Row="0" Grid.Column="0"/>
                            <TextBox Name="txtServerName" Grid.Row="0" Grid.Column="1"/>

                            <Label Content="Database Name:" Grid.Row="1" Grid.Column="0"/>
                            <TextBox Name="txtDatabaseName" Grid.Row="1" Grid.Column="1"/>

                            <Label Content="Username:" Grid.Row="2" Grid.Column="0"/>
                            <TextBox Name="txtUsername" Grid.Row="2" Grid.Column="1"/>

                            <Label Content="Password:" Grid.Row="3" Grid.Column="0"/>
                            <PasswordBox Name="txtPassword" Grid.Row="3" Grid.Column="1"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Button Content="Save Configuration" Style="{StaticResource PrimaryButtonStyle}" Name="btnSaveSQLConfig" Click="btnSaveSQLConfig_Click"/>
                            <Button Content="Test Connection" Style="{StaticResource SecondaryButtonStyle}" Name="btnTestCon" Click="btnTestCon_Click"/>
                            <Button Content="Continue" Style="{StaticResource PrimaryButtonStyle}" Name="btnContinue" Click="btnContinue_Click"/>
                        </StackPanel>
                    </StackPanel>
                </TabItem>

                <TabItem Header="Access Database" Height="22" Margin="-2,-2,-2,0" VerticalAlignment="Top">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Height="312" Width="536">
                        <TextBlock Text="Access Database Configuration"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"
                                   HorizontalAlignment="Center"
                                   Foreground="#333333"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                            <Label Content="Database Path:" VerticalAlignment="Center" Margin="0,0,10,0" />
                            <TextBox x:Name="DbPathBox" Width="300" IsReadOnly="True" />
                            <Button Content="Browse" Width="100" Margin="10,0,0,0" Style="{StaticResource SecondaryButtonStyle}" Click="Browse_Click" />
                        </StackPanel>

                        <CheckBox x:Name="EncryptedCheckBox"
                                  Content="Encrypted Database"
                                  Margin="0,10,0,10"
                                  HorizontalAlignment="Center"
                                  Foreground="#333333"
                                  Checked="EncryptedCheckBox_Checked"
                                  Unchecked="EncryptedCheckBox_Unchecked"/>

                        <StackPanel x:Name="PasswordPanel"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,5,0,0"
                                    Visibility="Collapsed">
                            <Label Content="Password:" VerticalAlignment="Center" Margin="0,0,10,0" />
                            <PasswordBox x:Name="DbPasswordBox" Width="200" Height="36" Padding="5" BorderBrush="#CCCCCC" BorderThickness="1"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Button Content="Restore Backup" Width="130" Margin="0,0,10,0" Style="{StaticResource SecondaryButtonStyle}" Click="RestoreDb_Click" />
                            <Button Content="Save Config" Width="120" Margin="0,0,10,0" Style="{StaticResource PrimaryButtonStyle}" Click="SaveConfig_Click" />
                            <Button Content="Reset Connection" Width="140" Style="{StaticResource TertiaryButtonStyle}" Click="ResetConnection_Click" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Button Content="Test Connection" Width="130" Style="{StaticResource SecondaryButtonStyle}" Click="TestConnection_Click" />
                            <Button Content="Continue" Width="100" Style="{StaticResource PrimaryButtonStyle}" Click="Continue_Click" />
                        </StackPanel>
                    </StackPanel>
                </TabItem>

                <TabItem Header="Oracle" Height="24" Margin="-2,-2,-2,0" VerticalAlignment="Top">
                    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Top">
                        <TextBlock Text="Oracle Database Configuration"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"
                                   HorizontalAlignment="Center"
                                   Foreground="#333333"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label Content="Data Source (TNS):" Grid.Row="0" Grid.Column="0"/>
                            <TextBox Name="txtOracleDataSource" Grid.Row="0" Grid.Column="1"/>

                            <Label Content="Username:" Grid.Row="1" Grid.Column="0"/>
                            <TextBox Name="txtOracleUsername" Grid.Row="1" Grid.Column="1"/>

                            <Label Content="Password:" Grid.Row="2" Grid.Column="0"/>
                            <PasswordBox Name="txtOraclePassword" Grid.Row="2" Grid.Column="1"/>

                            <Label Content="Port:" Grid.Row="3" Grid.Column="0"/>
                            <TextBox Name="txtOraclePort" Grid.Row="3" Grid.Column="1"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Button Content="Save Configuration" Style="{StaticResource PrimaryButtonStyle}" Name="btnSaveOracleConfig" Click="btnSaveOracleConfig_Click"/>
                            <Button Content="Test Connection" Style="{StaticResource SecondaryButtonStyle}" Name="btnTestOracleCon" Click="btnTestOracleCon_Click"/>
                            <Button Content="Continue" Style="{StaticResource PrimaryButtonStyle}" Name="btnOracleContinue" Click="btnOracleContinue_Click"/>
                        </StackPanel>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</Window>