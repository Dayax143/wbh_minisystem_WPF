<Window x:Class="fortest.Lora.RegLora"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fortest.Lora"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Lora Management" Height="550" Width="800">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="10" Padding="25" Background="#F8F8F8">
            <StackPanel>
                <TextBlock Text="Lora Registration" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#333333"/>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="Lora ID:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Name="txtLora_id" VerticalContentAlignment="Center" Padding="5"  />
                    <Label Grid.Row="1" Content="Supply:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,10,10,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Name="txtSupply" VerticalContentAlignment="Center" Padding="5" Margin="0,10,0,0" />
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <CheckBox Content="Taken" Name="chbStatus" Checked="chbStatus_Checked" Unchecked="chbStatus_Unchecked"
                              VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Label Content="Reference:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    <TextBox Width="120" Name="txtRefference" IsEnabled="{Binding ElementName=chbStatus, Path=IsChecked}" VerticalContentAlignment="Center" Padding="5"  />
                </StackPanel>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="Serial:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Name="txtSerial" VerticalContentAlignment="Center" Padding="5" />
                    <Label Grid.Row="1" Content="RV:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,10,10,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Name="txtRv" VerticalContentAlignment="Center" Padding="5" Margin="0,10,0,0" />
                    <CheckBox Grid.Row="1" Grid.Column="2" Content="Plate" Name="chbPlate" VerticalAlignment="Center" Margin="10,10,0,0"/>
                </Grid>

                <StackPanel Margin="0,0,0,20">
                    <Label Content="Note:" FontWeight="SemiBold"/>
                    <TextBox Name="txtNote" TextWrapping="Wrap" Height="80" VerticalScrollBarVisibility="Auto" Padding="5" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="New" Margin="0,0,10,0"  />
                    <Button Content="Save" Margin="0,0,10,0" Click="Button_Click_1" />
                    <Button Content="Update" Margin="0,0,10,0" Click="Button_Click_2"  />
                    <Button Content="Delete" Click="Button_Click"  />
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
        <Window.Resources>
            <Style x:Key="ModernTextBox" TargetType="TextBox">
                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                <Setter Property="BorderThickness" Value="1"/> 
                <Setter Property="Background" Value="#FFFFFF"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>

            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="Background" Value="#007ACC"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="BorderThickness" Value="0"/> 
            </Style>
            <Style x:Key="AccentButton" TargetType="Button">
                <Setter Property="Background" Value="#FFA500"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="BorderThickness" Value="0"/> 
            </Style>
            <Style x:Key="DangerButton" TargetType="Button">
                <Setter Property="Background" Value="#FF3B30"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="BorderThickness" Value="0"/> 
            </Style>
        </Window.Resources>

</Window>