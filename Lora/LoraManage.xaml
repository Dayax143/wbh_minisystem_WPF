<UserControl x:Class="fortest.LoraManage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:fortest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="1360" d:DesignHeight="768" Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#34495e"/>
        <SolidColorBrush x:Key="SecondaryBlue" Color="#2c3e50"/>
        <SolidColorBrush x:Key="AccentColor" Color="#3498db"/>
        <SolidColorBrush x:Key="ButtonHoverColor" Color="#2980b9"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#ecf0f1"/>
        <SolidColorBrush x:Key="TextColor" Color="#34495e"/>
        <SolidColorBrush x:Key="LightTextColor" Color="#ecf0f1"/>

        <Style x:Key="FormLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ButtonHoverColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ReportButtonStyle" BasedOn="{StaticResource ActionButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
        </Style>

        <Style x:Key="RefreshButtonStyle" BasedOn="{StaticResource ActionButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#5cb85c"/>
        </Style>

        <Style x:Key="DeleteButtonStyle" BasedOn="{StaticResource ActionButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#d9534f"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>

        <Style x:Key="SearchButtonStyle" BasedOn="{StaticResource ActionButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryBlue}"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

        <Style x:Key="AddNewButtonStyle" BasedOn="{StaticResource ActionButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>

        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>

    </UserControl.Resources>

    <Grid Background="#F4F4F4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource PrimaryBlue}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Welcome to Lora Reference Management" Foreground="{StaticResource LightTextColor}" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Content="Refresh" Grid.Column="1" HorizontalAlignment="Right" Style="{StaticResource RefreshButtonStyle}"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="20" Background="White" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <GroupBox Grid.Row="0" Header="Filter and Actions" Margin="0,0,0,10" Padding="10" FontWeight="SemiBold" FontSize="16">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Label Content="Search" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox Style="{StaticResource InputStyle}" Width="200" x:Name="txtSearch"/>

                    <Label Content="Filter By:" Style="{StaticResource FormLabelStyle}"/>
                    <ComboBox Style="{StaticResource ComboBoxStyle}" x:Name="cmbFilter1" SelectionChanged="cmbFilter1_SelectionChanged">
                        <ComboBoxItem Content="Pending"/>
                        <ComboBoxItem Content="Taken"/>
                        <ComboBoxItem Content="Repeated"/>
                        <ComboBoxItem Content=" "/>
                    </ComboBox>

                    <Label Content="Start Date:" Style="{StaticResource FormLabelStyle}"/>
                    <DatePicker Style="{StaticResource DatePickerStyle}" x:Name="dpStartDate"/>
                    <Label Content="End Date:" Style="{StaticResource FormLabelStyle}"/>
                    <DatePicker Style="{StaticResource DatePickerStyle}" x:Name="dpEndDate"/>

                    <Button Content="Today" Style="{StaticResource SearchButtonStyle}" x:Name="btnToday"/>
                    <Button Content="Pending" Style="{StaticResource SearchButtonStyle}" x:Name="btnPending"/>
                    <Button Content="Report" Style="{StaticResource ReportButtonStyle}" x:Name="btnReport" Click="btnReport_Click"/>
                    <Button Content="Add New Lora" Style="{StaticResource AddNewButtonStyle}" x:Name="btnAddNewLora" Click="btnAddNewLora_Click"/>
                </StackPanel>
            </GroupBox>

            <DataGrid Grid.Row="1" IsReadOnly="True" ItemsSource="{Binding}" AutoGenerateColumns="True" Name="dgvLora"/>
        </Grid>
    </Grid>
</UserControl>