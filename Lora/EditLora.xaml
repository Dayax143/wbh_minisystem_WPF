<Window x:Class="fortest.Lora.EditLora"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fortest.Lora"
        mc:Ignorable="d"
        Title="EditLora" Height="450" Width="800">
    <Grid>
        <!-- Left Panel - Input Forms and Buttons -->
        <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Lora Reference" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />

                <!-- Form Inputs -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="Lora_Id" />
                    <TextBox Grid.Row="0" Grid.Column="1" Name="txtLora_id" />

                    <Label Grid.Row="1" Content="Lora_Supply" />
                    <TextBox Grid.Row="1" Grid.Column="1" Name="txtSupply"/>

                    <Label Grid.Row="2" Content="Reference" />
                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBox Width="120" Name="txtRefference"/>
                        <CheckBox Content="Taken" Name="chbStatus"/>
                    </StackPanel>

                    <Label Grid.Row="3" Content="Serial" />
                    <TextBox Grid.Row="3" Grid.Column="1" Name="txtSerial" />

                    <Label Grid.Row="4" Content="RV" />
                    <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBox Width="120" Name="txtRv"/>
                        <CheckBox Content="Plate"/>
                    </StackPanel>

                    <Label Grid.Row="5" Content="Note" />
                    <TextBox Grid.Row="5" Grid.Column="1" TextWrapping="Wrap" Height="50" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Name="txtNote"/>
                </Grid>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Margin="0,20,0,0">
                    <Button Content="New" />
                    <Button Content="Save" Click="Button_Click" />
                    <Button Content="Update" />
                    <Button Content="Delete" />
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>
