<Window x:Class="fortest.Plates.RegPlate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fortest.Plates"
        mc:Ignorable="d"
        Title="RegPlate" Height="450" Width="800">

    <Grid Grid.Row="0" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#F0F0F0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="1" Text="Welcome to Plates Reference" FontSize="18" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="0,10"/>
            <Button Grid.Column="2" Content="Refresh" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
        </Grid>

        <StackPanel Grid.Row="1" Grid.Column="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Plate ID" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="0" Grid.Column="1" Margin="5"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="Supply" VerticalAlignment="Center" Margin="15,5,5,5"/>
                <TextBox Grid.Row="0" Grid.Column="3" Margin="5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Note" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Height="50" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

                <TextBlock Grid.Row="1" Grid.Column="2" Text="Reference" VerticalAlignment="Center" Margin="15,5,5,5"/>
                <TextBox Grid.Row="1" Grid.Column="3" Margin="5"/>
                <TextBlock Grid.Row="2" Grid.Column="2" Text="Quantity" VerticalAlignment="Center" Margin="15,5,5,5"/>
                <TextBox Grid.Row="2" Grid.Column="3" Margin="5"/>
                <CheckBox Grid.Row="2" Grid.Column="3" Content="Taken" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10,5,0,5"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <Button Content="Save" Margin="5" Width="100" Click="Button_Click"/>
            <Button Content="Update" Margin="5" Width="100"/>
            <Button Content="Delete" Margin="5" Width="100" Background="#FF6347" Foreground="White"/>
            <Button Content="New" Margin="5" Width="100"/>
        </StackPanel>
    </Grid>

</Window>
