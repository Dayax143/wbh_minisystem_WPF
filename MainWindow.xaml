<Window x:Class="fortest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:UserControl="clr-namespace:fortest"
        mc:Ignorable="d"
        Title="Empowerment Interface" Height="539" Width="967"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <DockPanel>
        <!-- 🔹 Top Header -->
        <Border DockPanel.Dock="Top" Background="#2C3E50" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="Welcome"
                               FontSize="16" Foreground="White"
                               VerticalAlignment="Center" Name="Welcome"/>
                    <TextBlock Text=" Username"
                               FontSize="16" Foreground="White"
                               VerticalAlignment="Center" Name="welcomeLabel"/>
                </StackPanel>

                <!-- Buttons on the right -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="Change Password"
                            Margin="0,0,10,0"
                            Width="140" Height="36"
                            Background="#9E9E9E" Foreground="White" BorderBrush="#9E9E9E" />
                    <Button Content="Logout"
                            Width="80" Height="36"
                            Background="#E74C3C" Foreground="White" BorderBrush="#E74C3C" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- 🔹 Left Menu -->
        <StackPanel DockPanel.Dock="Left"
                    Width="180"
                    Background="#34495E"
                    VerticalAlignment="Stretch">
            <Button Content="Dashboard" Foreground="White" Background="Transparent" Name="btnDashboard"
                    Margin="0,5,0,5" Padding="10" HorizontalContentAlignment="Left" />
            <Button Content="Tasks" Foreground="White" Background="Transparent" Name="btnTasks"
                    Margin="0,5,0,5" Padding="10" HorizontalContentAlignment="Left" Click="btnTasks_Click" />
            <Button Content="Plates" Foreground="White" Background="Transparent" Name="btnPlates"
                    Margin="0,5,0,5" Padding="10" HorizontalContentAlignment="Left" Click="btnPlates_Click" />
            <Button Content="About" Foreground="White" Background="Transparent"
                    Margin="0,5,0,5" Padding="10" HorizontalContentAlignment="Left" Name="btnAbout" />
            <Button Content="Manage Users" Foreground="White" Background="Transparent" Name="btnManageUsers"
                    Margin="0,5,0,5" Padding="10" HorizontalContentAlignment="Left" Click="btnManageUsers_Click"/>
        </StackPanel>

        <!-- 🔹 Main Content Area -->
        <Grid Name="mainGrid">

        </Grid>

    </DockPanel>
</Window>

