<Window x:Class="fortest.winLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fortest"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Border Background="White" CornerRadius="10" Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Header -->
            <TextBlock Text="Welcome" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"
                       Foreground="#333333" Margin="0,0,0,10"/>
            <TextBlock Text="Please log in to continue" FontSize="14" HorizontalAlignment="Center"
                       Foreground="#666666" Margin="0,0,0,30"/>

            <!-- Username -->
            <TextBlock Text="Username:" Margin="0,10,0,5"/>
            <TextBox x:Name="UsernameTextBox" Width="250" Height="36" Padding="5" BorderBrush="#CCCCCC" BorderThickness="1" Background="White" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Margin="0,0,0,15" />

            <!-- Password -->
            <TextBlock Text="Password:" Margin="0,10,0,5"/>
            <PasswordBox x:Name="PasswordBox" Width="250" Height="36" Padding="5" BorderBrush="#CCCCCC" BorderThickness="1" Background="White" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Margin="0,0,0,15" />

            <!-- Buttons -->
            <Button x:Name="btnLogin" Content="Login" Width="250" Height="40" Margin="0,15,0,0"
                    FontWeight="Bold" Foreground="White" FontSize="16" Cursor="Hand" Background="#4CAF50" BorderBrush="#4CAF50" Click="btnLogin_Click"/>
            <Button x:Name="btnCreateAccount" Content="Create an Account" Width="250" Height="40"
                    Margin="0,10,0,0" FontWeight="Bold" Foreground="White" FontSize="16" Cursor="Hand" Background="#2196F3" BorderBrush="#2196F3"
                    Click="btnCreateAccount_Click"/>
        </StackPanel>
    </Border>
</Window>
